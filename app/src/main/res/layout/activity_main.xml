<?xml version="1.0" encoding="utf-8"?>
<LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    tools:context=".Activities.MainActivity"
    android:gravity="center_horizontal">


    <ImageView
        android:id="@+id/middle_yellow_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/yellow_circle"
        android:layout_gravity="center"
        android:layout_marginTop="130dp"/>

    <TextView
        android:id="@+id/getYour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Your Life Organised"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_marginTop="40dp"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:padding="5dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plana is a simple and effective  "
        android:textSize="15sp"
        android:layout_margin="4dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="to-list and task manager app which"
        android:textSize="15sp"
        android:layout_margin="4dp"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" helps you manage time."
        android:textSize="15sp"
        android:layout_margin="4dp"
        />

    </LinearLayout>

    <Button
        android:id="@+id/btn_getStarted"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Started"
        android:textAllCaps="false"
        android:backgroundTint="@color/teal_700"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        android:theme="@style/ButtonTheme"
        android:background="@drawable/mybutton"/>

<!--
    android:backgroundTint="@color/teal_200"/>
-->

</LinearLayout>